@page
@model RazorPagesExampleP34.Pages.PersonCreateModel
@{
    var person = Model.Person;
    ViewData["Title"] = $"Створення";
}

<h1>@ViewData["Title"]</h1>


<form method="post">
    <div class="form-group">
        <label asp-for="Person.FirstName"></label>
        <input asp-for="Person.FirstName" class="form-control" />
        <span asp-validation-for="Person.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Person.LastName"></label>
        <input asp-for="Person.LastName" class="form-control" />
        <span asp-validation-for="Person.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Person.BirthDate"></label>
        <input asp-for="Person.BirthDate" class="form-control" type="date" />
        <span asp-validation-for="Person.BirthDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Person.Profession"></label>
        <input asp-for="Person.Profession" class="form-control" />
        <span asp-validation-for="Person.Profession" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Зберігти</button>
    <a class="btn btn-primary" asp-page="/People">Back to People List</a>
</form>
