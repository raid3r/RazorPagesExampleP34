@page "/people/list"
@model RazorPagesExampleP34.Pages.PeopleModel
@{
    
    ViewData["Title"] = "People";
    var peoples = Model.People;
}

@section Scripts {
    <script src="~/js/confirm-delete.js" asp-append-version="true"></script>
}


<h1>@ViewData["Title"]</h1>

<div class="mt-3 mb-3">
    <a class="btn btn-primary" asp-page="/PersonCreate">Create New Person</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birth Date</th>
            <th>Profession</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in peoples)
        {
            <tr>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>@person.BirthDate.ToString("dd.MM.yyyy")</td>
                <td>@person.Profession</td>
                <td>
                    <div class="button-container">
                       
                        <a class="btn btn-info" asp-page="/PersonView" asp-route-id="@person.Id" asp-route-fullName="@person.LastName @person.FirstName"  >View</a>
                        <a class="btn btn-warning" asp-page="/PersonEdit" asp-route-id="@person.Id">Edit</a>
                        <a class="btn btn-warning" asp-page="/PersonSkills" asp-route-id="@person.Id">Skills</a>
                        <form class="confirm-delete" method="post" asp-route-id="@person.Id">
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </div>
                    
                </td>
            </tr>
        }
    </tbody>
</table>

